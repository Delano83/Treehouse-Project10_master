extends layout

block content
  h1= pageTitle

  if submissionFail
    ul
      each error in submissionFail.errors
        li= error.message

  form(method='POST' action='/new-book')
    p
      label(for='title') Title
      input(id='title' name='title' type='text' value='')
    p
      label(for='author') Author
      input(id='author' name='author' type='text' value='')
    p
      label(for='genre') Genre
      input(id='genre' name='genre' type='text' value='')
    p
      label(for='genre') First Published
      input(id='first_published' name='first_published' type='text' value='')
    p
      input(type='submit', value='Create New Book')
