extends layout

block content
  h1= title
  
  p
    a.button(href='/new-patron') Create New Patron
  
  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip Code
        
    tbody
      if data.length > 0
        each patron in data
          tr
            td
              a(href='/patron-detail/' + patron.id) #{patron.first_name} #{patron.last_name}
            td= patron.address
            td= patron.email
            td= patron.library_id
            td= patron.zip_code
      else
        tr
          td No patrons..